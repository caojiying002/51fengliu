<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base button style -->
    <style name="ButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_button_background</item>
        <item name="android:textSize">@dimen/button_text_default</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Base style for ProfileFragment grid items -->
    <style name="ProfileGridItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:clickable">true</item>
    </style>
</resources>