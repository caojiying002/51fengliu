<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 夜间模式基础颜色 -->
    <color name="background">#121212</color>
    <color name="primary">#ff6cab</color><!-- 稍微亮一点的粉色，在暗背景上更醒目 -->
    <color name="outline">#909090</color>
    <color name="error">#ff5252</color>

    <!-- 阴影渐变颜色 -->
    <color name="shadow_bottom_navbar_start">#1a1a1a</color>

    <!-- 夜间模式文字颜色 -->
    <color name="on_primary">#000000</color>
    <color name="on_background">#e1e1e1</color>

    <!-- 其他夜间模式颜色 - 增强对比度 -->
    <color name="surface">#2a2a2a</color>
    <color name="on_surface">#e6e6e6</color>

    <!-- 文字颜色 -->
    <color name="text_title">@color/on_surface</color><!-- 用于详情页标题 -->
    <color name="text_content">#cccccc</color>
    <color name="text_light">#a0a0a0</color><!-- 用于发布时间等次要信息 -->
    <color name="text_item_title">#f0f0f0</color><!-- 用于列表项标题，比on_surface稍亮但不是纯白 -->
    <color name="text_tab">@color/text_light</color><!-- 用于首页Tab文字 -->
    <color name="text_price">@color/white</color><!-- 价格使用纯白色，突出显示 -->

    <!-- 分类Tab颜色 -->
    <color name="category_tab_selected">@color/text_content</color><!-- 分类Tab选中状态文字颜色 -->
    <color name="category_tab_unselected">#999999</color><!-- 分类Tab未选中状态文字颜色，夜间模式稍亮 -->

    <!-- 分隔线 -->
    <color name="divider">#383838</color>
    <color name="item_pressed">@color/divider</color>

    <!-- 按钮颜色 -->
    <color name="button_default">@color/primary</color>
    <color name="button_pressed">#ff8cbf</color><!-- 夜间模式主按钮按下状态，比正常状态更亮 -->
    <color name="button_disabled">#3c3c3c</color><!-- 夜间模式禁用按钮，深灰色 -->
    <color name="button_pressed_secondary">#404040</color><!-- 夜间模式次要按钮按下时的背景色 -->

    <!-- 图标颜色 -->
    <color name="icon_search_default">#b0b0b0</color>
</resources>