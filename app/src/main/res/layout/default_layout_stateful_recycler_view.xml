<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--
    <include layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"/>
-->

    <include
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        layout="@layout/widget_title_bar" />

    <com.jiyingcao.a51fengliu.ui.widget.StatefulLayout
        android:id="@+id/stateful_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:loadingLayout="@layout/stateful_default_loading"
        app:contentLayout="@layout/smart_refresh_recycler_view"
        app:errorLayout="@layout/stateful_default_error"
        app:emptyLayout="@layout/stateful_default_empty">
    </com.jiyingcao.a51fengliu.ui.widget.StatefulLayout>


</LinearLayout>