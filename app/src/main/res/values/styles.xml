<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base button style -->
    <style name="ButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_button_background</item>
        <item name="android:textSize">@dimen/button_text_default</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Secondary button style for cancel/dismiss actions -->
    <style name="SecondaryButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_secondary_button_background</item>
        <item name="android:textSize">@dimen/button_text_default</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/button_default</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Base style for ProfileFragment grid items -->
    <style name="ProfileGridItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- TabLayout styles for category/content tabs -->
    <style name="Widget.App.CategoryTabLayout" parent="Widget.Material3.TabLayout">
        <item name="android:background">@color/surface</item>
        <item name="tabTextColor">@color/category_tab_unselected</item>
        <item name="tabSelectedTextColor">@color/category_tab_selected</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">start</item>
        <item name="tabPaddingStart">16dp</item>
        <item name="tabPaddingEnd">16dp</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorFullWidth">true</item>
    </style>
    
    <!-- TextInputLayout styles -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <!-- 自定义错误文本外观 -->
        <item name="errorTextAppearance">@style/TextAppearance.App.Error</item>
    </style>
    <style name="TextAppearance.App.Error" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">?attr/colorError</item>
        <item name="android:textSize">14dp</item>
    </style>
</resources>