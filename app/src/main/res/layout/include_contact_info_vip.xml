<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/corner_solid_white_no_padding"
    android:paddingHorizontal="8dp"
    android:paddingVertical="2dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:text="您是VIP会员，尊享无限制查看全站联系方式。"
        android:textSize="@dimen/text_default"
        android:textStyle="bold"
        android:textColor="@color/primary" />

    <TextView
        android:id="@+id/qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:text="QQ："
        android:textSize="@dimen/text_default"
        android:textColor="@color/text_content" />

    <TextView
        android:id="@+id/wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:text="微信："
        android:textSize="@dimen/text_default"
        android:textColor="@color/text_content" />

    <TextView
        android:id="@+id/telegram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:text="Telegram："
        android:textSize="@dimen/text_default"
        android:textColor="@color/text_content" />

    <TextView
        android:id="@+id/yuni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:text="与你号："
        android:textSize="@dimen/text_default"
        android:textColor="@color/text_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introQQ" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:text="手机："
        android:textSize="@dimen/text_default"
        android:textColor="@color/text_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introWechat" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:text="地址："
        android:textSize="@dimen/text_default"
        android:textColor="@color/text_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introPhone" />
</LinearLayout>

            